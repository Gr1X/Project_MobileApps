<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/getStartedFragment"> <fragment
    android:id="@+id/getStartedFragment"
    android:name="com.example.project_mobileapps.features.getstarted.GetStartedFragment"
    android:label="GetStartedFragment" >
    <action
        android:id="@+id/action_getStartedFragment_to_authFragment"
        app:destination="@id/authFragment" />
</fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.project_mobileapps.features.auth.AuthFragment"
        android:label="AuthFragment" >
        <action
            android:id="@+id/action_authFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/getStartedFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="showLoginByDefault"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.project_mobileapps.features.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_doctorDetailFragment"
            app:destination="@id/doctorDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
        <action
            android:id="@+id/action_homeFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
    </fragment>

    <fragment
        android:id="@+id/doctorDetailFragment"
        android:name="com.example.project_mobileapps.features.doctorDetail.DoctorDetailFragment"
        android:label="DoctorDetailFragment" >
        <argument
            android:name="doctorId"
            app:argType="string" />
        <action
            android:id="@+id/action_doctorDetailFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
    </fragment>

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.example.project_mobileapps.features.schedule.ScheduleFragment"
        android:label="Pilih Jadwal"
        tools:layout="@layout/fragment_schedule">
        <argument
            android:name="doctorId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.project_mobileapps.features.news.NewsFragment"
        android:label="NewsFragment" />

</navigation>